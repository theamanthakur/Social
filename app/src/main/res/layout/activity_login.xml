<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="125dp"
                android:background="@drawable/logo"
                android:layout_marginBottom="10dp"
                >
            </ImageView>
            <TextView
                android:id="@+id/textWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textAlignment="center"
                android:layout_below="@id/logoImg"
                android:textSize="36sp"

                android:layout_marginBottom="30dp"
                >
            </TextView>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textWelcome"
                android:id="@+id/textEmaillog"
                android:hint="  Email"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:padding="15dp"
                android:background="@drawable/inputs"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@color/colorPrimary"
                >
            </EditText>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPasslog"
                android:hint="  Password"
                android:drawableStart="@drawable/ic_baseline_lock_open_24"
                android:padding="15dp"
                android:layout_below="@+id/textEmaillog"
                android:background="@drawable/inputs"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@color/colorPrimary"
                >
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPasslog"
                android:text="Forgot Password ?"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#477CE3"
                android:id="@+id/textForgot"
                android:textAlignment="textEnd"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                >
            </TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="18sp"
                android:layout_below="@+id/textForgot"
                android:background="@drawable/buttons"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/btnLoginact"
                >
            </Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLoginact"
                android:text="Create Account"
                android:clickable="true"
                android:textColor="#477CE3"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:id="@+id/textCreateAcc"
                android:textAlignment="center"
                android:textSize="16sp"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCreateAcc"
                android:text="Or Login using your"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:id="@+id/textPhn"
                android:textAlignment="center"
                android:textSize="16sp"
                >
            </TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="18sp"
                android:layout_below="@+id/textPhn"
                android:background="@drawable/buttons"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/btnPhone"
                >
            </Button>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>